    function setResultType(value, row) {
        if (value == 'qualitative') {
            $('.qualitative' + row).removeClass('hide');
            $('.quantitative' + row).addClass('hide');
        } else {
            $('.quantitative' + row).removeClass('hide');
            $('.qualitative' + row).addClass('hide');
        }
    }
