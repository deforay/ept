	function unEnrollDrawTable() {
		oTable = $('#unEnrollmentTable').dataTable( {
			"oLanguage": {
			    "sLengthMenu": "_MENU_ records per page"
			},
			"bJQueryUI": false,
			"bAutoWidth": true,
			"bInfo": true,
			"bScrollCollapse": true,
			"sPaginationType": "full_numbers",
			"bRetrieve": false,
			"bDestroy": true,
			"bStateSave": true,
			"aoColumns": [
			    {"sClass":"center noWrap","bSortable":false},
			    {"sClass":"center"},
			    {"sClass":"center"},
			    {"sClass":"center"},
			    {"sClass":"center"},
			    {"sClass":"center"}
			],
			"aaSorting": [[ 0, "asc" ]],
			"fnDrawCallback": function() {
				var checkBoxes=document.getElementsByName("participants[]");
				len = checkBoxes.length;
				for(c=0;c<len;c++){
				    if (jQuery.inArray(checkBoxes[c].id, chosenOnes) != -1 )
				    {
					checkBoxes[c].setAttribute("checked",true);
				    }
				}
			},
			"bProcessing": true,
			"bServerSide": true,
			"sAjaxSource": "<?php echo $this->url(array('module' => 'admin', 'controller' => 'shipment', 'action' => 'unenrollments', 'format' => 'html')); ?>",
			"fnServerParams": function ( aoData ) {
				aoData.push( { "name": "shipmentId", "value": '<?php echo $this->shipment['shipment_id']; ?>' } );
			},
			"fnServerData": function ( sSource, aoData, fnCallback ) {
