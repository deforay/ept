		});
	}
	
	function removeParticipants(mid){
		if (window.confirm("Are you sure you want to remove this participant?\n This cannot be undone !")) { 
			$.blockUI();
			$.post("<?php echo $this->url(array('module' => 'admin', 'controller' => 'shipment', 'action' => 'delete-shipment-participant')); ?>", { mid: mid, format: "html" },
			    function (data) {
			       if (data>0) {
				alert("Participants removed successfully");
			       }else{
				alert("Unable to delete. Please try again later or contact system admin for help");
			       }
				drawTable();
				$.unblockUI();
			});
		}		
		
	}
	
	function showUnEnrollment(){
		$("#unEnrollmentTable_wrapper").show("slow");
		$("#closeBtn").show();
		$("#submitbtn").show();
		$("#showBtn").hide();
	}
	
	function hideUnEnrollment(){
		$("#unEnrollmentTable_wrapper").hide("slow");
		$("#showBtn").show();
		$("#closeBtn").hide();
		$("#submitbtn").hide();
	}
	
	function checkParticipantName(id,obj)
	{
	       if(obj.checked==true)
	       {
		   if (jQuery.inArray(obj.id, chosenOnes) == -1 )
		   {
		       chosenOnes.push(obj.id);
		   }
		   else
		   {
		       chosenOnes.remove(obj.id); // remove function is in config.js
		   }
	       }else{
		chosenOnes.remove(obj.id);
	       }
       }
       
	Array.prototype.remove= function(){
	var what, a= arguments, L= a.length, ax;
	while(L && this.length){
	what= a[--L];
	while((ax= this.indexOf(what))!= -1){
	    this.splice(ax, 1);
	}
	}
	return this;
	}
	
