							$("#participantList").val('')
						}
					}
					updateList = false;
				},
				afterDeselect: function(values) {
					if ($("#participantList").val() != "" && updateList) {
						if (confirm("<?= $this->translate->_("Are you sure! You want to update this list to selected participant list name?"); ?>")) {
							// Do is confirm
						} else {
							$("#participantList").val('')
						}
					}
					updateList = false;
				}

			});
