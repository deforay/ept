<script type="text/javascript" charset="utf-8">
    /* Table initialisation */
    var oTable = null;
    $(document).ready(function() {
        oTable = $('#participantsTable').dataTable({
            "oLanguage": {
                "sLengthMenu": "_MENU_ records per page"
            },
            "bJQueryUI": false,
            "bAutoWidth": false,
            "bInfo": true,
            "bScrollCollapse": true,
            "sPaginationType": "bootstrap",
            "bRetrieve": true,
            "aoColumns": [{
                    "sClass": "center"
                },
                {
                    "sClass": ""
                },
                {
                    "sClass": "center"
                },
                {
                    "sClass": "center"
                },
                {
                    "sClass": "center"
                },
                {
                    "sClass": "center"
                },
                {
                    "sClass": ""
                },
                {
                    "sClass": "center"
                },
                {
                    "sClass": "center",
                    "bSortable": false
                }
            ],
            "aaSorting": [
                [0, "asc"]
            ],
            "bProcessing": true,
            "bServerSide": true,
            "sAjaxSource": "<?php echo $this->url(array('module' => 'admin', 'controller' => 'participants', 'action' => 'index', 'format' => 'html')); ?>",
            "fnServerParams": function(aoData) {
                labName = $("#labId").val();
                country = $("#country").val();
                pstatus = $("#pstatus").val();
                aoData.push({
                    "name": "pid",
                    "value": labName
                });
                aoData.push({
                    "name": "country",
                    "value": country
                });
                aoData.push({
                    "name": "pstatus",
                    "value": pstatus
                });
            },
            "fnServerData": function(sSource, aoData, fnCallback) {
                $.ajax({
                    "dataType": 'json',
                    "type": "POST",
                    "url": sSource,
                    "data": aoData,
                    "success": fnCallback
                });
            }
        });

        $("#country").select2({
            placeholder: "<?= $this->translate->_("Choose one or more Countries"); ?>",
            minimumInputLength: 3,
            width: '100%',
            allowClear: true,
            ajax: {
                placeholder: "<?= $this->translate->_("Type Country name to search"); ?>",
                url: "<?php echo $this->url(array('module' => 'default', 'controller' => 'common', 'action' => 'get-all-countries')); ?>",
                dataType: 'json',
                delay: 250,
                data: function(params) {
                    return {
                        search: params.term, // search term
                        page: params.page
                    };
                },
                processResults: function(data, params) {
                    params.page = params.page || 1;
                    return {
                        results: data.result,
                        pagination: {
                            more: (params.page * 30) < data.total_count
                        }
                    };
                },
                //cache: true
            },
            escapeMarkup: function(markup) {
                return markup;
            }
        });

        $("#labId").select2({
            placeholder: "<?= $this->translate->_("Choose one or more Lab(s)"); ?>",
            minimumInputLength: 3,
            width: '100%',
            allowClear: true,
            ajax: {
                placeholder: "<?= $this->translate->_("Type lab/participant name to search"); ?>",
                url: "<?php echo $this->url(array('module' => 'admin', 'controller' => 'data-managers', 'action' => 'get-participants-names')); ?>",
                dataType: 'json',
                delay: 250,
                data: function(params) {
                    return {
                        search: params.term, // search term
                        page: params.page
                    };
                },
                processResults: function(data, params) {
                    params.page = params.page || 1;
                    return {
                        results: data.result,
                        pagination: {
                            more: (params.page * 30) < data.total_count
                        }
                    };
                },
                //cache: true
            },
            escapeMarkup: function(markup) {
                return markup;
            }
        });
    });

    function downloadParticipantDetails() {
        $.blockUI();
        $.post("<?php echo $this->url(array('module' => 'admin', 'controller' => 'participants', 'action' => 'export-participants-details', 'format' => 'html')); ?>",
            function(data) {
                $.unblockUI();
                if (data == "" || data == null || data == undefined || $.trim(data) == 'not-found' || !data) {
                    alert('<?= $this->translate->_("Unable to generate download"); ?>');
                } else {
                    window.open('/temporary/' + data, '_blank');
                }
            });
    }

    function deleteParticipant(id) {
        if (id > 0) {
            if (confirm("<?= $this->translate->_("Are you sure you want to delete this participant?"); ?> ")) {
                // $.blockUI();
                $.post("<?php echo $this->url(array('module' => 'admin', 'controller' => 'participants', 'action' => 'delete-participant')); ?>", {
                        participantId: id,
                        format: "html"
                    },
                    function(data) {
                        $.unblockUI();
                        if (data > 0) {
                            oTable.fnDraw();
                        }
                    });
            }
        } else {
            alert("<?= $this->translate->_("Someting went wrong Please try again later!"); ?> ")
        }
    }

    function getDrawable() {
        $.blockUI();
        oTable.fnDraw();
        $.unblockUI();
    }
</script>