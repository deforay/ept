<script type="text/javascript">
    var duplicated = false;
    var dataManagerSelect, countrySelect;

    $(document).ready(function() {

        checkIndividualParticipant();
        $('#enrolledProgram, #country').selectpicker();

        let _tables = ['data_manager'];
        let _elements = ['dataManager'];
        let _returnId = ['dm_id'];
        let _fieldNames = [
            ['first_name', 'last_name', 'institute', 'primary_email']
        ];
        let _concat = [
            ['first_name', 'last_name', 'institute', 'primary_email']
        ];

        // Initialize Tom Select for each element
        _elements.forEach(function(elementId, i) {
            var selectElement = document.getElementById(elementId);
            if (!selectElement) return;

            var tomSelectInstance = new TomSelect('#' + elementId, {
                plugins: ['remove_button'],
                valueField: 'id', // âœ… Changed from '_id' to 'id'
                labelField: 'text',
                searchField: 'text',
                placeholder: "<?= $this->translate->_("Choose multiple options"); ?>",
                loadThrottle: 250,
                preload: false,
                allowEmptyOption: true,
                load: function(query, callback) {
                    var url = "<?php echo $this->url(array('module' => 'reports', 'controller' => 'common', 'action' => 'get-ajax-drop-downs')); ?>";

                    fetch(url + '?' + new URLSearchParams({
                            tableName: _tables[i],
                            returnId: _returnId[i],
                            fieldNames: JSON.stringify(_fieldNames[i]),
                            concat: JSON.stringify(_concat[i]),
                            search: query,
                            page: 1
                        }))
                        .then(response => response.json())
                        .then(json => {
                            callback(json.result || []);
                        })
                        .catch(() => {
                            callback();
                        });
                },
                render: {
                    option: function(item, escape) {
                        return '<div>' + escape(item.text) + '</div>';
                    },
                    item: function(item, escape) {
                        return '<div>' + escape(item.text) + '</div>';
                    }
                }
            });

            // Store instances for later use
            if (elementId === 'dataManager') {
                dataManagerSelect = tomSelectInstance;
            } else if (elementId === 'country') {
                countrySelect = tomSelectInstance;
            }
        });
    });

    function checkDuplicate(tableName, fieldName, obj, fnct, msg) {
        $.post("<?php echo $this->url(array('module' => 'default', 'controller' => 'common', 'action' => 'check-duplicate')); ?>", {
                tableName: tableName,
                fieldName: fieldName,
                value: obj.value,
                fnct: fnct,
                format: "html"
            },
            function(data) {
                if (data > 0) {
                    alert(msg, "err");
                    duplicated = true;
                    obj.focus();
                } else {
                    duplicated = false;
                }
            });
    }

    function validateNow() {
        if ($('#dmPassword').val() == '' && $('#dataManager').val() == '') {
            alert('Please choose either to log in with your PT account or enter your email ID and password.');
            return false;
        }
        $(".bootstrap-select").removeClass('isRequired');

        flag = deforayValidator.init({
            formId: 'addParticipantForm'
        });
        if (flag && !duplicated) {
            $.blockUI();
            document.getElementById('addParticipantForm').submit();
        }
    }

    function checkIndividualParticipant() {
        let isChecked = $('#individualParticipant').is(':checked');
        if (isChecked) {
            $("#pfnameLabel").text("<?= $this->translate->_("First Name"); ?>");
            $("#lastNameDiv").show();
            $("#lastNameDiv").removeClass('hide');
            $("#contactnameDiv").hide();
            $("#contactnameDiv").addClass('hide');
        } else {
            $("#pfnameLabel").html("<?= $this->translate->_("Lab Name"); ?>");
            $("#lastNameDiv").hide();
            $("#lastNameDiv").addClass('hide');
            $("#contactnameDiv").show();
            $("#contactnameDiv").removeClass('hide');
        }
    }

    <?php if ($directParticipantLogin) { ?>

        function validPassword() {
            if ($('#dmPassword').val() != '') {
                $.post("<?php echo $this->url(array('module' => 'reports', 'controller' => 'common', 'action' => 'validate-password')); ?>", {
                        name: $('#contactname').val(),
                        email: $('#pemail').val(),
                        password: $('#dmPassword').val(),
                        format: "html"
                    },
                    function(data) {
                        if (data == 'success') {
                            validateNow();
                        }
                        if (data != 'success') {
                            alert(data);
                            return false;
                        }
                    });
            } else {
                validateNow();
            }
        }
    <?php } ?>
</script>