    <div style="font-size:22.5px;line-height:36px;color:#333;float:left;">
        <?= $this->translate->_("List of all VL Assays"); ?></div>
    <div style="margin-top:10px;"><a
            href="<?php echo $this->url(array('module' => 'admin', 'controller' => 'vl-assay', 'action' => 'add'), 'default', true); ?>"
            class="btn btn-primary" style="float:right;"><i
                class="icon-plus"></i>&nbsp;&nbsp;<?= $this->translate->_("Add New VL Assay"); ?></a></div>
</h4>
<table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered table-hover"
    id="vlAssayTable">
    <thead>
        <tr>
            <th style="width:40%;"><?= $this->translate->_("Name"); ?></th>
            <th style="width:40%;"><?= $this->translate->_("Short Name"); ?></th>
            <th><?= $this->translate->_("Action"); ?></th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td colspan="3" class="dataTables_empty"><?= $this->translate->_("Loading data from server"); ?></td>
        </tr>
    </tbody>
</table>

<script type="text/javascript" charset="utf-8">
    /* Table initialisation */
    var oTable = null;
    $(document).ready(function () {
        oTable = $('#vlAssayTable').dataTable({

            "bJQueryUI": false,
            "bAutoWidth": false,
            "bInfo": true,
            "bScrollCollapse": true,
            "sPaginationType": "bootstrap",
            "bRetrieve": true,
            "aoColumns": [{
                "sClass": ""
            },
            {
                "sClass": ""
            },
            {
                "sClass": "center",
                "bSortable": false
            }
            ],
            "aaSorting": [
                [0, "ASC"]
            ],
            "bProcessing": true,
            "bServerSide": true,
            "sAjaxSource": "<?php echo $this->url(array('module' => 'admin', 'controller' => 'vl-assay', 'action' => 'index', 'format' => 'html')); ?>",
            "fnServerData": function (sSource, aoData, fnCallback) {
                $.ajax({
                    "dataType": 'json',
                    "type": "POST",
                    "url": sSource,
                    "data": aoData,
                    "success": fnCallback
                });
            }
        });

    });
</script>