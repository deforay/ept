<script type="text/javascript" charset="utf-8">
    /* Table initialisation */
    var oTable = null;
    $(document).ready(function () {
        drawTable();
    });

    function getApproval(status) {
        $('#status').val(status);
        drawTable();
    }

    function drawTable() {
        oTable = $('#genericTestTable').dataTable({

            "bJQueryUI": false,
            "bAutoWidth": false,
            "bInfo": true,
            "bScrollCollapse": true,
            "sPaginationType": "bootstrap",
            "bRetrieve": false,
            "bDestroy": true,
            "aoColumns": [{
                "sClass": "center"
            },
            {
                "sClass": "center"
            },
            {
                "sClass": "center"
            },
            {
                "sClass": "center",
                "bSortable": false
            }
            ],
            "aaSorting": [
                [0, "asc"]
            ],
            "bProcessing": true,
            "bServerSide": true,
            "sAjaxSource": "<?php echo $this->url(array('module' => 'admin', 'controller' => 'custom-test', 'action' => 'index', 'format' => 'html')); ?>",
            "fnServerParams": function (aoData) {
                approvalStatus = $("#status").val();
                aoData.push({
                    "name": "status",
                    "value": approvalStatus
                });
            },
            "fnServerData": function (sSource, aoData, fnCallback) {
                $.ajax({
                    "dataType": 'json',
                    "type": "POST",
                    "url": sSource,
                    "data": aoData,
                    "success": fnCallback
                });
            }
        });
    }
</script>