    if (obj.value == 'manual') {
      $("#manualRange" + obj.id).addClass("isRequired");
      if ($("#manualRange" + obj.id).val() == "") {
        $(".manualRange" + obj.id).css("background-color", "#ffb3b3");
      }
    } else {
      $("#manualRange" + obj.id).removeClass("isRequired");
      $(".manualRange" + obj.id).css("background-color", "");
    }
  }

