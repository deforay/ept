<div class="well">
    <form name="editPartnerForm" id="editPartnerForm" method="post" action="<?php echo $this->url(array("module" => "admin", "controller" => "partners", "action" => "edit"),'default', true) ?>" class="form-horizontal bs-example" role="form" enctype="multipart/form-data" onsubmit="validateNow();return false;">
        <fieldset>
            <legend>Edit Partner</legend>
            <div class="form-group">
                <label class="col-lg-3 control-label">Partner Name <span class="mandatory">*</span></label>

                <div class="col-lg-5"><textarea type="text" id="partnerName" name="partnerName"
                                             class="isRequired form-control" title="Please enter the partner name here"
                                             placeholder="Please enter the partner name here" onblur="checkDuplicate('partners', 'partner_name','partnerName','<?php echo "partner_id##" . $this->partner['partner_id']; ?>', 'The name that you entered already exist. Please try something else.');"><?php echo $this->partner['partner_name']; ?></textarea></div>
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">Link <br>ex.)https://ept.vlsmartconnect.com/</label>

                <div class="col-lg-5"><input type="text" id="link" name="link"
                                             class="form-control" title="Please enter the link here"
