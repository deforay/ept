                        <option
                            value="active" <?php echo ($this->partner['status'] == "active") ? "selected='selected'" : ""; ?>>
                            Active
                        </option>
                        <option
                            value="inactive" <?php echo ($this->partner['status'] == "inactive") ? "selected='selected'" : ""; ?>>
