                });
            },
            "fnRowCallback": function(nRow, aData, iDisplayIndex) {
                $.unblockUI;
            },
        });
        $('#exportExcel').removeClass('hide');
        getChart();

        performanceExportPdf();

    }

    function getChart() {
        $.blockUI;
        $.post("<?php echo $this->url(array('module' => 'reports', 'controller' => 'participant-performance', 'action' => 'participant-performance-timeliness-barchart'), 'default', true); ?>", {
