				},
				{
					"sClass": "center"
				},
				{
					"sClass": "center"
				},
				{
					"sClass": "center"
				},
				{
					"sClass": "center"
				},
				{
					"sClass": "center",
					"bSortable": false
				},
				{
					"sClass": "center",
					"bSortable": false
				}
			],
			"aaSorting": [
				[1, "desc"]
			],
			"bProcessing": true,
			"bServerSide": true,
			"sAjaxSource": "<?php echo $this->url(array('module' => 'reports', 'controller' => 'shipments', 'action' => 'index', 'format' => 'html')); ?>",
			"fnServerParams": function(aoData) {
				schemeType = $("#scheme").val();
				dateRange = $("#dateRange").val();
				dataManager = $("#dataManager").val();
				aoData.push({
					"name": "dateRange",
					"value": dateRange
				});
				aoData.push({
					"name": "scheme",
					"value": schemeType
				});
				aoData.push({
					"name": "startDate",
					"value": startDate
				});
				aoData.push({
					"name": "endDate",
					"value": endDate
				});
				aoData.push({
					"name": "dataManager",
					"value": dataManager
				});
			},
			"fnServerData": function(sSource, aoData, fnCallback) {
				$.ajax({
					"dataType": 'json',
					"type": "POST",
					"url": sSource,
					"data": aoData,
					"success": fnCallback
				});
			},
			"fnRowCallback": function(nRow, aData, iDisplayIndex) {
				$.unblockUI;
			},
		});


	};

	function generateShipmentParticipantList(shipmentId, schemeType) {
		$.blockUI();
