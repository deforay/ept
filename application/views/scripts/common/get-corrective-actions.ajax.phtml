<?php if (empty($this->warnings)): ?>
    <div class="text-muted text-center p-2">No Warnings or Corrective Actions</div>
<?php else: ?>
    <table class="table table-bordered table-striped table-compressed" style="margin-bottom:0;">
        <thead>
            <tr>
                <th>Failure Reasons (or) Warnings</th>
                <th>Corrective Actions (if any)</th>
            </tr>
        </thead>
        <tbody>
            <?php foreach ($this->warnings as $warning): ?>
                <tr>
                    <td><?= isset($warning['warning']) ? $warning['warning'] : '' ?></td>
                    <td><?= isset($warning['correctiveAction']) ? $warning['correctiveAction'] : '' ?></td>
                </tr>
            <?php endforeach; ?>
        </tbody>
    </table>
<?php endif; ?>
