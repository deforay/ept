	function validateNow() {
		var dates = [];
		$(".sampleTestDate").each(function() {

			dates.push(new Date($(this).val()))

		});
		var maxDate = new Date(Math.max.apply(null, dates));
		$("#testDate").val(moment(maxDate).format('DD-MMM-YYYY'));
