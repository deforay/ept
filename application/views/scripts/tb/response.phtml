	function rifDetectionChange(obj, id) {
		if ($(obj).val() == 'detected') {
			$("#rifResistance"+id).attr("disabled", false); 
		}else{
			$("#rifResistance"+id).val("na"); 
			$("#rifResistance"+id).attr("disabled", true); 
