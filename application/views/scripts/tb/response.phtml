			$.post("/tb/assay-formats?type=" + value + "&sid=<?php echo $this->shipId; ?>&pid=<?php echo $this->participantId; ?>&eid=<?php echo $this->eID; ?>", {
					format: "html"
				},
				function(data) {
					if (data != "") {
						$(".loadAssay").html(data);
					}
					if(value == "molbio-truenat-tb" || value == "molbio-truenat-plus"){
						$('#tb-plus').hide();
					}else{
						$('#tb-plus').show();
					}
				});
		}
	}



