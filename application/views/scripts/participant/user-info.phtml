<script type="text/javascript">
    duplicated = false;
    function validateNow(){
        if($('#pemail').val() != $('#oldpemail').val()){
            // if(confirm('Are you sure you want to change your email from '+$('#oldpemail').val()+' to '+$('#pemail').val()+' ?')){
            if(confirm('Please note that your primary email ('+$('#pemail').val()+') is used to login to ePT. If you change and verify it, the new email id will become your login id')){
                flag = deforayValidator.init({
                    formId: 'userInfoForm'
                });
                if(flag){
                    if(!duplicated){
                        $.blockUI();
                        document.getElementById('userInfoForm').submit();
                    }
                }
            }
        }else{
            flag = deforayValidator.init({
                formId: 'userInfoForm'
            });
            if(flag){
                if(!duplicated){
                    $.blockUI();
                    document.getElementById('userInfoForm').submit();
                }
            } 
        }
    }

    function checkDuplicate(tableName, fieldName, obj, fnct, msg) {
        objValue = $(obj).val();
        $.post("<?php echo $this->url(array('module' => 'default', 'controller' => 'common', 'action' => 'check-duplicate')); ?>", {
            tableName: tableName,
            fieldName: fieldName,
            value: objValue,
            fnct: fnct,
            format: "html"
        },
        function(data) {
            if (data > 0) {
                alert(msg, "err");
                duplicated = true;
                $(obj).focus();$(obj).val('');
            } else {
                duplicated = false;
            }
            return duplicated;
        });
    }    
    
    function reSentVerifyMail(email) {
        $.post("<?php echo $this->url(array('module' => 'default', 'controller' => 'participant', 'action' => 'resent-mail-verification')); ?>", {
            registeredEmail: email,
            oldEmail: $('#oldpemail').val(),
            format: "html"
        },
        function(data) {
            if(data > 0){
                $('.alert-success').fadeIn(500);
                setTimeout(function(){
                    $('.alert-success').fadeOut(500);
                }, 10000); 
            }
        });
    }    
</script>