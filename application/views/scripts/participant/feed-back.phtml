<script type="text/javascript">
    duplicated = false;

    function validateNow() {
        flag = deforayValidator.init({
            formId: 'feedbackForm'
        });
        if (flag) {
            if (!duplicated) {
                $.blockUI();
                document.getElementById('feedbackForm').submit();
            }
        }
    }

    function checkDuplicate(tableName, fieldName, obj, fnct, msg) {
        objValue = $(obj).val();
        $.post("<?php echo $this->url(array('module' => 'default', 'controller' => 'common', 'action' => 'check-duplicate')); ?>", {
                tableName: tableName,
                fieldName: fieldName,
                value: objValue,
                fnct: fnct,
                format: "html"
            },
            function(data) {
                if (data > 0) {
                    alert(msg, "err");
                    duplicated = true;
                    $(obj).focus();
                    $(obj).val('');
                } else {
                    duplicated = false;
                }
                return duplicated;
            });
    }
</script>