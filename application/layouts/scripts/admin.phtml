		function dateFormat(date) {
			var _date = new Date(date);
			var day = pad(_date.getDay(), 2);
			var month = pad(_date.getMonth(), 2);
			var year = Math.abs(_date.getFullYear());
			return year + "-" + month + "-" + day;
