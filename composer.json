{
    "name": "deforay/ept",
    "description": "Open Source Online PT Management System",
    "homepage": "https://github.com/deforay/ept",
    "type": "project",
    "authors": [
        {
            "name": "Deforay",
            "email": "hello@deforay.com",
            "homepage": "https://deforay.com"
        }
    ],
    "require": {
        "crunzphp/crunz": "^3.4",
        "gregwar/captcha": "^1.3",
        "hackzilla/password-generator": "^1.6",
        "ifsnop/mysqldump-php": "^2.12",
        "mitoteam/jpgraph": "^10.4",
        "monolog/monolog": "^2.10",
        "mpdf/mpdf": "^8.2",
        "netflie/whatsapp-cloud-api": "^2.2",
        "phpmyadmin/sql-parser": "^5.11",
        "phpoffice/phpspreadsheet": "^1.30",
        "phpoffice/phpword": "^1.4",
        "setasign/fpdf": "^1.8",
        "setasign/fpdi": "^2.6",
        "shardj/zf1-future": "^1.24",
        "symfony/uid": "^5.4",
        "tecnickcom/tcpdf": "^6.10"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "secure-http": true,
        "platform": {
            "php": "7.4",
            "php-64bit": "7.4"
        }
    },
    "require-dev": {
        "symfony/var-dumper": "^5.4"
    },
    "scripts": {
        "db-backup": "php bin/db-tools.php backup",
        "tasks": "crunz schedule:run",
        "collation": "php bin/change-db-collations.php",
        "migrate": "php bin/migrate.php -yq",
        "post-update": [
            "@migrate",
            "@collation"
        ]
    }
}